#!/bin/bash

if tmux has-session -t sidebar
then
	tmux attach -t sidebar
else
	tmux new -d -s sidebar -y $LINES

	tmux send-keys -t sidebar:1 'vim $HOME/todo.md' C-m
	tmux splitw
	tmux splitw /usr/bin/newsboat

	tmux select-pane -t 1
	tmux resize-pane -D 5
	tmux select-pane -t 3
	tmux resize-pane -U 4

	tmux select-pane -t 2
	tmux splitw -h

	tmux select-pane -t 2
	tmux send-keys -t sidebar:1 'pomodoro' C-m ' '
	tmux select-pane -t 3
	tmux send-keys -t sidebar:1 'medicijnen' C-m ' '

	tmux set mouse
	tmux attach -t sidebar
fi
