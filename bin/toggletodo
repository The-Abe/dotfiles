#!/bin/bash
P=$(tmux show -wqv @mytodopane)
if [ -n "$P" ] && tmux lsp -F'#{pane_id}'|grep -q ^$P; then
     tmux send-keys -t$P ":w"
     tmux killp -t$P
     tmux set -wu @mytodopane
else
     P=$(tmux splitw -h -l40 -PF'#{pane_id}' -c "#{pane_current_path}" nvim ~/todo.md)
     tmux set -w @mytodopane "$P"
fi
